<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" integrity="sha256-9mbkOfVho3ZPXfM7W8sV2SndrGDuh7wuyLjtsWeTI1Q=" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/styles.css" type="text/css">
    <title>Szczęki</title>
    
</head>
<body>
  <div class="ui inverted menu">
    <div class="header item">
      Strona Główna
    </div>
    <!-- <a href="contact" class="item">
      About Us
    </a> -->
    <a href="new" class="item">
      Dodaj Szczęki
    </a>
    <div class="right menu">
        <a class="ui inverted button">Sign Up</a>
        <a class="ui inverted button">Help</a>
      </div>
</div>
   
    
      
    <div class="ui container">
        <h1>SZCZĘKI</h1>   
            <div class="ui three column grid">
                <%foundBlogs.forEach(blog => { %>
                    <div class="column">
                        <div class="ui label">
                            Date
                            <div class="detail"><span><%= today %></span></div>
                        </div>
                        <a href="/blogs/<%= blog._id %>">
                        <div class="ui animated button more">
                       
                          <div class="visible content">Szczegóły</div>
                          <div class="hidden content">
                            <i class="right arrow icon"></i>
                          </div>
                        </div>
                      </a>
                        <h2><%= blog.title %></h2>
                        <img class="ui centered rounded bordered medium image" src="<%= blog.image %>" alt="blogpostimg">
                        <p><%= blog.body %></p>
                        
                    </div>
                <% }); %>
            </div>
    </div>
  
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>  
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js" integrity="sha256-t8GepnyPmw9t+foMh3mKNvcorqNHamSKtKRxxpUEgFI=" crossorigin="anonymous"></script>
</body>
</html>